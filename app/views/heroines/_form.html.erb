<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <h5><strong><%= error %></strong>!</h5>
  <% end %>
<% end %>
<%= form_for @heroine do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>
  <%= f.label :super_name %>
  <%= f.text_field :super_name %><br><br>
  <%= f.label :power_id %>
  <%= f.collection_select(:power_id, @powers, :id, :name) %><br><br>

  <%= f.submit %>

<% end %>

<br><br>
<%= link_to "Return to heroine index page", heroines_path %>
