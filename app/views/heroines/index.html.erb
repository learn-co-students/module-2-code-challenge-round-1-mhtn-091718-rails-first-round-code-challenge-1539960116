<h2>All Heroines</h2>

<%= form_tag(heroines_path, method: :get) do %>
  <%= label_tag (:power)%>
  <%= text_field_tag (:search)%>
  <%= submit_tag 'Search' %>
<% end %>

<ul>
  <% @heroines.each do |heroine| %>
      <% if params[:search] %>
        <% if heroine.power.name == params[:search] %>
           <li> <%= link_to heroine.name, heroine %></li>
           <br>
        <% end %>
      <% else %>
        <li> <%= link_to heroine.name, heroine %></li>
        <br>
      <% end %>
  <% end %>
</ul>
<br>
<%= link_to "Register a new heroine", new_heroine_path %>
