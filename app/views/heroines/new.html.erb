<h1>New Heroine Form</h1>

<% if flash[:error] %>
  <h3>Error Notice:</h3>
  <ul>
    <% flash[:error].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @heroine do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :super_name %>
  <%= f.text_field :super_name %>
  <%= f.label :power_id, "Power" %>
  <%= f.collection_select :power_id, @powers, :id, :name %>

  <%= f.submit %>
<% end %>
