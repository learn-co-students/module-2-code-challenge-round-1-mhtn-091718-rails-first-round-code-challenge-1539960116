<h1>Create a new heroine</h1>

<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
  <%= errors %>
  <% end %>
<% end %>

<%= form_for(@heroine) do |f| %>
  <%=  f.label :name %>
  <%=  f.text_field :name %>
<br>
  <%=  f.label :super_name %>
  <%=  f.text_field :super_name %>
<br>
  <%=  f.label :power %>
  <%=  f.collection_select(:power_id, @powers, :id, :name) %>
<br>
  <%=  f.submit%>

<% end %>
