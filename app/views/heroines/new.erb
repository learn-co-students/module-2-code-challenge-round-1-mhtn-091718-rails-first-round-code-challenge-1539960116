<h1>Brand new heroine!</h1>

<% if flash[:errors] %>
<h3>There was at least one error in your submission form</h3>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for @heroine do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :super_name %>
  <%= f.text_field :super_name %>
  <%= f.label :power %>
  <%= f.collection_select :power_id, @powers, :id, :name %>
  <%= f.submit %>

<% end %>
