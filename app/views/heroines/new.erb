<h1>Add Heroine</h1>

<%if flash[:error] %>
  <% flash[:error].each do |error| %>
    <%= error %><br>
  <% end %>
<% end %>

<%= form_for @heroine do |f| %>
<%= f.label :name %>
<%= f.text_field :name %> <br><br>
<%= f.label :super_name %>
<%= f.text_field :super_name %><br><br>
<%= f.label :power_id %>
<%= f.collection_select :power_id, @powers, :id, :name %> <br><br>
<%= f.submit %>
<% end %>

<br><br><br>
<%= link_to "Back to all heroines", heroines_path %>


